<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="110dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"

    android:gravity="left"
    style="?android:listSeparatorTextViewStyle"
    >


    <TextView
        android:id="@+id/list_row_Task_state"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/circular_textview"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#E6E0E0"
        android:textSize="16dp"
        tools:text="tag" />

    <LinearLayout
        android:layout_width="213dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_row_task_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:textSize="20dp"
            tools:text="task State" />

        <TextView
            android:id="@+id/text_view_task_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:hint="Date"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"

        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_view_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_share" />
        <ImageView
            android:id="@+id/image_view_delete_task"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete_task" />
    </LinearLayout>


