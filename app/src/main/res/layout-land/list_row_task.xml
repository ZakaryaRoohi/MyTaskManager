<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="130dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"

    android:gravity="left"
    style="?android:listSeparatorTextViewStyle"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/list_row_Task_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />


        <ImageView
            android:id="@+id/image_view_edit_picture"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="#94FBF7F7"
            android:src="@drawable/ic_add_photo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/list_row_Task_image"

            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintStart_toStartOf="@+id/list_row_Task_image"
            app:layout_constraintTop_toTopOf="@+id/list_row_Task_image"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="213dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_row_task_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:textSize="20dp"
            tools:text="task State" />

        <TextView
            android:id="@+id/text_view_task_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:hint="Date"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/text_view_task_user"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:hint="user"
            android:text="dvfvdfvdvvdfdfv"
            android:textColor="#17698E"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"

        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_view_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_share" />
        <ImageView
            android:id="@+id/image_view_delete_task"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete_task" />
    </LinearLayout>


    <!--    <TextView-->
    <!--        android:id="@+id/list_row_task_title"-->
    <!--        android:layout_width="170dp"-->
    <!--        android:layout_marginLeft="100dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:textSize="22dp"-->
    <!--        tools:text="task Title" />-->


</LinearLayout>